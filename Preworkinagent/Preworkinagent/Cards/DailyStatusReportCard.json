{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://adaptivecards.io/content/pending.png",
                  "size": "Small",
                  "style": "Person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Daily RFI Status Report",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "${reportDate} - ${reportTime} AEST",
                  "spacing": "None",
                  "isSubtle": true,
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "$when": "${hasAttentionItems}",
      "style": "attention",
      "items": [
        {
          "type": "TextBlock",
          "text": "ATTENTION REQUIRED",
          "weight": "Bolder",
          "size": "Medium",
          "color": "Attention"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "At Risk (>21 days)",
              "value": "${atRiskCount}"
            },
            {
              "title": "Approaching Deadline (7 days)",
              "value": "${approachingDeadlineCount}"
            },
            {
              "title": "Email Bounces",
              "value": "${emailBounceCount}"
            }
          ]
        }
      ],
      "separator": true,
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "JOB STATUS SUMMARY",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Status",
                  "weight": "Bolder",
                  "size": "Small"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Count",
                  "weight": "Bolder",
                  "size": "Small",
                  "horizontalAlignment": "Right"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Change",
                  "weight": "Bolder",
                  "size": "Small",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "Container",
          "$data": "${jobStateSummary}",
          "items": [
            {
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${statusName}",
                      "size": "Small"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${count}",
                      "size": "Small",
                      "horizontalAlignment": "Right",
                      "weight": "Bolder"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${changeDisplay}",
                      "size": "Small",
                      "horizontalAlignment": "Right",
                      "color": "${changeColor}"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "REMINDERS SCHEDULED TODAY",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "T+7 Email Reminders",
              "value": "${reminder1DueCount}"
            },
            {
              "title": "T+14 SMS Reminders",
              "value": "${reminder2DueCount}"
            },
            {
              "title": "T+21 Final Notices",
              "value": "${finalNoticeDueCount}"
            }
          ]
        }
      ],
      "$when": "${totalRemindersDue > 0}"
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Total Jobs: ${totalJobs}",
          "size": "Small",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "View Pre Work In Jobs",
      "style": "positive",
      "data": {
        "action": "view_preworkin_jobs"
      }
    },
    {
      "type": "Action.Submit",
      "title": "View At-Risk Clients",
      "data": {
        "action": "view_at_risk_clients"
      }
    }
  ]
}
